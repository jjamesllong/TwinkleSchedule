<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/configuration_nav"
    app:startDestination="@id/guideScheduleFragment">

    <fragment
        android:id="@+id/guideScheduleFragment"
        android:name="com.keycome.twinkleschedule.presentation.configuration.GuideScheduleFragment"
        android:label="@string/guideScheduleFragmentLabel"
        tools:layout="@layout/fragment_guide_schedule">
        <action
            android:id="@+id/action_guideScheduleFragment_to_manageScheduleFragment"
            app:destination="@id/manageScheduleFragment"
            app:popUpTo="@id/guideScheduleFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_guideScheduleFragment_to_editScheduleFragment"
            app:destination="@id/editScheduleFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_from_right" />
    </fragment>
    <fragment
        android:id="@+id/editScheduleFragment"
        android:name="com.keycome.twinkleschedule.presentation.configuration.EditScheduleFragment"
        android:label="@string/editScheduleFragmentLabel"
        tools:layout="@layout/fragment_edit_schedule">
        <action
            android:id="@+id/action_editScheduleFragment_to_addTimeLineFragment"
            app:destination="@id/editTimeLineFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_from_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_from_right">
            <argument
                android:name="timeLineId"
                android:defaultValue="-1" />
        </action>
        <argument
            android:name="isModify"
            android:defaultValue="false"
            app:argType="boolean" />
    </fragment>
    <fragment
        android:id="@+id/editTimeLineFragment"
        android:name="com.keycome.twinkleschedule.presentation.configuration.EditTimeLineFragment"
        android:label="@string/editTimeLineFragmentLabel">
        <argument
            android:name="timeLineId"
            android:defaultValue="-1"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/manageScheduleFragment"
        android:name="com.keycome.twinkleschedule.presentation.configuration.ManageScheduleFragment"
        android:label="fragment_manage_schedule"
        tools:layout="@layout/fragment_manage_schedule">
        <action
            android:id="@+id/action_manageScheduleFragment_to_editScheduleFragment"
            app:destination="@id/editScheduleFragment">
            <argument
                android:name="isModify"
                android:defaultValue="true" />
        </action>
    </fragment>
</navigation>