<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/display_nav"
    app:startDestination="@id/displayCoursesFragment">
    <fragment
        android:id="@+id/displayCoursesFragment"
        android:name="com.keycome.twinkleschedule.presentation.display.DisplayCoursesFragment"
        android:label="fragment_display_courses"
        tools:layout="@layout/fragment_display_courses" >
        <action
            android:id="@+id/action_displayCoursesFragment_to_courseDetailDialogFragment"
            app:destination="@id/courseDetailDialogFragment" >
            <argument
                android:name="courseId"
                android:defaultValue="0L" />
        </action>
    </fragment>
    <dialog
        android:id="@+id/courseDetailDialogFragment"
        android:name="com.keycome.twinkleschedule.presentation.display.CourseDetailDialogFragment"
        android:label="CourseDetailDialogFragment" >
        <argument
            android:name="courseId"
            app:argType="long"
            android:defaultValue="0L" />
    </dialog>
</navigation>