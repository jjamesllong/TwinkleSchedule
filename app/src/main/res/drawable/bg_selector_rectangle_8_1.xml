<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="50" android:exitFadeDuration="250">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#A6ACAF" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@android:color/background_dark" />
            <solid android:color="@color/md_theme_light_secondaryContainer" />
        </shape>
    </item>
</selector>