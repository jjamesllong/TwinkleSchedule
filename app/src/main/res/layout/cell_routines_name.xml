<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cell_routines_name_root"
    android:layout_width="90dp"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="0dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/bg_shape_rectangle_8_0"
    android:backgroundTint="@color/md_theme_light_onPrimaryContainer"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cell_routines_name_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:gravity="center"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textSize="14sp"
        tools:text="默认" />

    <ImageView
        android:id="@+id/cell_routines_name_delete"
        android:layout_width="@dimen/clickable_icon_width"
        android:layout_height="@dimen/clickable_icon_height"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:padding="16dp"
        app:srcCompat="@drawable/ic_baseline_cross_24"
        app:tint="?android:attr/textColorPrimaryInverse" />
</FrameLayout>