<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:layout_height">@dimen/tool_bar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="navigationIcon">@drawable/ic_baseline_arrow_back_24</item>
        <item name="subtitleCentered">true</item>
        <item name="titleCentered">true</item>
        <item name="title">Title</item>
        <item name="titleTextAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="FullBottomDialogAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <style name="FloatingCenterDialogAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/scale_expand_with_alpha</item>
        <item name="android:windowExitAnimation">@anim/scale_shrink_with_alpha</item>
    </style>

    <style name="BaseDialogFragment">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>